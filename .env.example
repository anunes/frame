# ============================================
# Application Configuration
# ============================================
APP_NAME="Frame"
# Timezone for date/time operations
# See: https://www.php.net/manual/en/timezones.php
# Examples: UTC, America/New_York, Europe/London, Asia/Tokyo, Atlantic/Azores
APP_TIMEZONE="UTC"

# Locale for formatting (dates, currency, numbers)
# Examples: en_US, pt_PT, es_ES, fr_FR, de_DE
APP_LOCALE="en_US"

# ============================================
# Database Configuration
# ============================================
# Supported types: mysql, sqlite, pgsql
# Uncomment the section for your chosen database type

# --- MySQL Configuration (Default) ---
DB_TYPE=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=framework
DB_USERNAME=root
DB_PASSWORD=
DB_CHAR=utf8mb4

# --- SQLite Configuration ---
# DB_TYPE=sqlite
# DB_DATABASE=database.db

# Note: SQLite doesn't use HOST, PORT, USERNAME, PASSWORD, or CHAR
# Database file will be created in storage/database/

# ============================================
# Mail Configuration
# ============================================
# For Gmail: Use an App Password from https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_NAME="Frame"
MAIL_DEBUG=0

# ============================================
# Contact Form Configuration
# ============================================
# Email address to receive contact form submissions
CONTACT_MAIL_TO=contact@example.com
